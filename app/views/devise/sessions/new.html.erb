<div class="flex-column  vh-100 d-flex align-items-center justify-content-center">
  <div class="container-form">
    <div class="Title">
      <h2>Log in</h2>
    </div>
    <div class="Form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "input-text" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field"%>
        </div>
        <br>
        <div class="field">
          <%= f.label :password, class: "input-text" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "input-field"%>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>
      <div class="Validate">
        <div class="actions">
          <%= f.submit "Log in", class: "btn-primary hvr-grow" %>
        </div>
      <% end %>
    </div>
   



<%= render "devise/shared/links" %>
  </div>
</div>