<p style="color: green"><%= notice %></p>
<h1>Subscriptions</h1>
<div id="subscriptions">
  <% @subscriptions.each do |subscription| %>
    <%= render subscription %>
    <p>
      <%= link_to "Show this subscription", subscription %>
    </p>
  <% end %>
</div>
<%= link_to "New subscription", new_subscription_path %>
<div class="container py-3">
  <header>
    <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
      <h1 class="display-4 fw-normal">Pricing</h1>
      <p class="fs-5 text-muted">Take Out A Subscription </p>
    </div>
  </header>
  <main>
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
      <%=@subscription.each do |abo|%>
        <div class="col">
          <div class="card mb-4 rounded-3 shadow-sm">
            <div class="card-header py-3">
              <h4 class="my-0 fw-normal">Days</h4>
            </div>
            <div class="card-body">
              <h1 class="card-title pricing-card-title">17€<small class="text-muted fw-light"></small></h1>
              <ul class="list-unstyled mt-3 mb-4">
                <li>access to the climbing section</li>
                <li>access to the leisure area</li>
                <li>Access to coworking</li>
                <li>. </li>
              </ul>
              <button type="button" class="w-100 btn btn-lg btn-outline-primary">Add to card</button>
            </div>
          </div>
        <% end %>
      </div>
      <%=@subscription.each do |abo|%>
        <div class="col">
          <div class="card mb-4 rounded-3 shadow-sm">
            <div class="card-header py-3">
              <h4 class="my-0 fw-normal">Month</h4>
            </div>
            <div class="card-body">
              <h1 class="card-title pricing-card-title">45€<small class="text-muted fw-light"></small></h1>
              <ul class="list-unstyled mt-3 mb-4">
                <li>access to the climbing section</li>
                <li>access to the leisure area</li>
                <li>access to the relaxation area</li>
                <li> Access to coworking</li>
              </ul>
              <button type="button" class="w-100 btn btn-lg btn-outline-primary">Add to card</button>
            </div>
          </div>
        </div>
      <% end %>
      <%=@subscription.each do |abo|%>
        <div class="col">
          <div class="card mb-4 rounded-3 shadow-sm ">
            <div class="card-header py-3  ">
              <h4 class="my-0 fw-normal">Years</h4>
            </div>
            <div class="card-body">
              <h1 class="card-title pricing-card-title">450€<small class="text-muted fw-light"></small></h1>
              <ul class="list-unstyled mt-3 mb-4">
                <li>access to the climbing section</li>
                <li>access to the leisure area</li>
                <li>access to the relaxation area</li>
                <li> Access to coworking</li>
              </ul>
              <button type="button" class="w-100 btn btn-lg btn-outline-primary">Add to card</button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <h2 class="display-6 text-center mb-4">Compare plans</h2>
    <div class="table-responsive">
      <table class="table text-center">
        <thead>
          <tr>
            <th style="width: 0%;"></th>
            <th style="width: 22%;">Days </th>
            <th style="width: 22%;">Month</th>
            <th style="width: 22%;">Years</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row" class="text-start">(senior) 19 to 34 years</th>
            <td><svg class="bi" width="24" height="24"><use xlink:href="#check"/></svg>12€</td>
            <td><svg class="bi" width="24" height="24"><use xlink:href="#check"/></svg>35€</td>
            <td><svg class="bi" width="24" height="24"><use xlink:href="#check"/></svg>350€</td>
          </tr>
          <tr>
          </tbody>
          <tbody>
            <tr>
              <th scope="row" class="text-start">(veteran) +35 years</th>
              <td><svg class="bi" width="24" height="24"><use xlink:href="#check"/></svg>15€</td>
              <td><svg class="bi" width="24" height="24"><use xlink:href="#check"/></svg>39€</td>
              <td><svg class="bi" width="24" height="24"><use xlink:href="#check"/></svg>390€</td>
            </tr>
            <tr>
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </body>
</html>
