<h2 class="display-6 text-center my-4">Abonnement Possible</h2>
<div class="d-flex justify-content-center  ">
  <div class=" container row row-cols-4 justify-content-center m-5 ">
    <% @subscriptions.each do |info|%>
      <div class="mh-25 col-12 col-sm-4 mb-4">
        <div class="card col  mt-1  ">
          <div class="card-header py-3">
            <h4 class="my-0 fw-normal text-center"><%=info.name%></h4>
          </div>
          <div class="card-body text-center">
            <h1 class="card-title pricing-card-title text-center"><%=info.price%>â‚¬<small class="text-muted fw-light"></small></h1>
            <ul class="list-unstyled mt-3 mb-4">
              <li><%=info.description%></li>
            </ul>
            <div class="d-flex justify-content-center">
              <% if !user_signed_in? or !current_user.has_active_subscription %>
                <%= button_to "S'abonner", order_subscription_book_subscription_path(subscription_id: info.id, duration: info.duration), method: :post, class:"btn btn-success"%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end%>
  </div>
</div>
